
#
#
def mergeSort(arr):
	mid = len(arr)//2
  	lft , rgt = arr[:mid] , arr[mid:]
  	if len(arr)>1: lft = mergeSort(lft)
  	if len(arr)>1: rgt = mergeSort(rgt)
  	res = []                             # to store result
  	while lft and rgt:					# if lft or rgt empty , break the loop
		if lft[-1] > rgt[-1]:			# if last one of the lft greater than rgt, add to res
			res.append(lft.pop())
		else:
			res.append(rgt.pop())       
			
	res.reverse()						# res is descend , reverse it .
	return (lft or rgt) + res			
